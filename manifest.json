{
  "manifest_version": 2,

  "name": "TweetEasy",
  "description": "Post on Twitter the easy way!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "favicon-3.png",
    "default_title": "Post on twitter!"
  },
  "icons": {
    "64": "favicon.png",
    "32": "favicon-1.png",
    "24": "favicon-2.png"
  },
  "background": {
    "scripts" : ["background.js"]
  },
  "permissions": [
    "contextMenus"
  ]
}
